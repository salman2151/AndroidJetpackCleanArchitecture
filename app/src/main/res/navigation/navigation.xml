<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.nytimescleanarchitecture.presentation.fragment.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment">
        <action
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_splashFragment_to_articleListFragment"
            app:destination="@id/articleListFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleListFragment"
        android:name="com.example.nytimescleanarchitecture.presentation.fragment.article.ArticleListFragment"
        android:label="article_list_fragment"
        tools:layout="@layout/article_list_fragment" >
        <action
            android:id="@+id/action_articleListFragment_to_emptyFragment"
            app:destination="@id/emptyFragment" />
    </fragment>


    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.example.nytimescleanarchitecture.presentation.fragment.empty.EmptyFragment"
        android:label="empty fragment"
        tools:layout="@layout/empty_fragment" />
</navigation>